// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "VSCode Dark Modern",

  "diagnostics": {
    "include_warnings": true
  },
  "show_edit_predictions": false,

  // START Pannels
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "chat_panel": {
    "default_width": 360,
    "button": "always"
  },
  "collaboration_panel": {
    "default_width": 360,
    "dock": "right"
  },
  "git_panel": {
    "default_width": 360
  },
  "outline_panel": {
    "default_width": 360
  },
  "notification_panel": {
    "default_width": 360
  },
  "project_panel": {
    "default_width": 360,
    "dock": "right"
  },
  "agent": {
    "default_width": 360,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  // END Pannels

  "hide_mouse": "never",
  "completions": {
    "words": "enabled"
  },

  "buffer_font_features": { "calt": false }, // ligature
  "buffer_font_size": 12,
  "ui_font_size": 12,
  "terminal": {
    "font_size": 12
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "all"
  },
  "preview_tabs": {
    "enabled": false
  },
  // "seed_search_query_from_cursor": "selection",
  "vim_mode": true,

  // for the popup whenever move / edit
  "auto_signature_help": false,
  "show_signature_help_after_edits": false,

  "vim": {
    "use_smartcase_find": true,
    "use_system_clipboard": "never",
    "toggle_relative_line_numbers": true
  },
  "use_smartcase_search": true,
  "relative_line_numbers": true,
  "vertical_scroll_margin": 0,
  "format_on_save": "off",
  "tab_size": 2,
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path_lookup": true,
        "path": "/Users/yohanesbandung/.cargo/bin/rust-analyzer",
        "arguments": []
      }
    },
    "dart": {
      "binary": {
        "path": "/opt/homebrew/bin/fvm",
        "arguments": ["dart", "language-server", "--protocol=lsp"]
      }
    }
  },
  "languages": {
    "JavaScript": {
      "prettier": { "allowed": false },
      "formatter": {
        "external": {
          "command": "eslint_d",
          "arguments": [
            "--stdin",
            "--stdin-filename",
            "{buffer_path}",
            "--fix-to-stdout"
          ]
        }
      }
    },
    "JSX": {
      "prettier": { "allowed": false },
      "formatter": {
        "external": {
          "command": "eslint_d",
          "arguments": [
            "--stdin",
            "--stdin-filename",
            "{buffer_path}",
            "--fix-to-stdout"
          ]
        }
      }
    },
    "TypeScript": {
      "prettier": { "allowed": false },
      "formatter": {
        "external": {
          "command": "eslint_d",
          "arguments": [
            "--stdin",
            "--stdin-filename",
            "{buffer_path}",
            "--fix-to-stdout"
          ]
        }
      }
    },
    "TSX": {
      "prettier": { "allowed": false },
      "formatter": {
        "external": {
          "command": "eslint_d",
          "arguments": [
            "--stdin",
            "--stdin-filename",
            "{buffer_path}",
            "--fix-to-stdout"
          ]
        }
      }
    }
  }
}
